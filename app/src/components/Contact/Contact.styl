#contact
  min-height: 100vh
  background-image: url('/images/shattered-island.gif')

  .messageForm
    width: 80%
    margin: 0 auto 10px
    text-align: center
    padding: 10px
    color: white
    font-size: 15px
    border-radius: 10px
    text-transform: uppercase
    height: 70px

  form
    width: 80%
    height: 300px
    margin: 0 auto

  input, textarea
    display: block
    margin-bottom: 20px
    width: 100%
    border-radius: 10px
    padding-left: 10px
    text-transform: uppercase
    font-family: 'Lato', sans-serif
    &:focus
      border: 2px solid #850001

  input
    height: 20%
    border: none

  textarea
    height: 60%
    padding-top: 10px
    border: none

  button
    width: 100%
    height: 20%
    border-radius: 10px
    font-family: 'Lato', sans-serif
    font-size: 20px
    text-transform: uppercase
    border: none
    background-color: #850001
    color: white

@media (min-width: 500px)
  #contact
    form
      width: 40%

    .messageForm
      width: 40%
      margin: 0 auto 70px
      font-size: 20px
      height: 70px
